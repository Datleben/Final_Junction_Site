@model List<Final_Junction_Site.Models.Customer>

@{
    ViewData["Title"] = "Account Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css" rel="stylesheet">

<h1 class="mt-4 mb-4 text-center">Account Details</h1>

<div class="container">
    @if (!Model.Any())
    {
        <p class="alert alert-warning">No accounts found.</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var customer in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@customer.CustomerName</h5>
                            <p class="card-text">Email: @customer.CustomerEmail</p>
                            <p class="card-text">Address: @customer.CustomerAddress</p>
                            <p class="card-text">Email Notifications: @(customer.SendEmailNotifications ? "Yes" : "No")</p>
                            <p class="card-text">Text Notifications: @(customer.SendTextNotifications ? "Yes" : "No")</p>
                        </div>
                        <div class="card-footer">
                            <a asp-action="Edit" asp-controller="Customer" asp-route-CustomerId="@customer.CustomerId" class="btn btn-primary">Edit Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>
