@model Final_Junction_Site.Models.Customer

@{
    ViewData["Title"] = "Account Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css" rel="stylesheet">

<h1 class="mt-4 mb-4 text-center">Account Details</h1>

<div class="container">
    @if (Model == null)
    {
        <p class="alert alert-warning">No account found.</p>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.CustomerName</h5>
                <p class="card-text">Email: @Model.CustomerEmail</p>
                <p class="card-text">Address: @Model.CustomerAddress</p>
                <p class="card-text">Email Notifications: @(Model.SendEmailNotifications ? "Yes" : "No")</p>
                <p class="card-text">Text Notifications: @(Model.SendTextNotifications ? "Yes" : "No")</p>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-controller="Customer" asp-route-CustomerId="@Model.CustomerId" class="btn btn-primary">Edit Details</a>
            </div>
        </div>
    }
</div>

<script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>
