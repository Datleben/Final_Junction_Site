@model IEnumerable<Final_Junction_Site.Models.CategoryProductModel>
@* @model IEnumerable<Site> *@

@{
    ViewData["Title"] = "Search Results";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css" rel="stylesheet">

<h1 class="mt-4 mb-4 text-center">Search Results</h1>

<div class="container">
    @if (!Model.Any())
    {
        <p class="alert alert-warning">No products found matching your criteria.</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @* <table>
                <thead>
                    <tr>
                        <td>Site Name</td>
                        <td>Site Description</td>
                        <td>Site Link</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Site s in Model)
                    {
                        <tr>
                            <td>@s.SiteName</td>
                            <td>@s.Description</td>
                            <td><button href="@s.URL">Site Link</button></td>
                        </tr>
                    }
                </tbody>
            </table> *@
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@Url.Content(item.ImageUrl ?? "~/images/default-product.jpg")" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">Price: @item.Price.ToString("C")</p>
                            <p class="card-text"><small class="text-muted">Category: @item.Category</small></p>
                            @if (item.IsNew)
                            {
                                <span class="badge bg-success">New</span>
                            }
                            @if (item.OnSale)
                            {
                                <span class="badge bg-danger">Sale</span>
                            }
                            <div class="rating mt-2">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <i class="@(i < item.Rating ? "fas" : "far") fa-star text-warning"></i>
                                }
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Details", "Product", new { id = item.ProductId })" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>
