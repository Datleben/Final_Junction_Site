@model List<Final_Junction_Site.Models.Site>
@{
    ViewData["Title"] = "Search Results";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css" rel="stylesheet">

<h1 class="mt-4 mb-4 text-center">Search Results</h1>

<div class="container">
    @if (!Model.Any())
    {
        <p class="alert alert-warning">No sites found matching your criteria.</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var site in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@Url.Content(site.ThumbnailURL ?? "~/images/default-site.jpg")" class="card-img-top" alt="@site.SiteName" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@site.SiteName</h5>
                            <p class="card-text">@site.Description</p>
                            <p class="card-text"><small class="text-muted">Trend Score: @site.TrendScore</small></p>
                        </div>
                        <div class="card-footer">
                            <a href="@site.URL" class="btn btn-primary" target="_blank">Visit Site</a>
                            <a asp-action="Details" asp-controller="Site" asp-route-SiteId="@site.SiteId" class="btn btn-secondary">Show Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>
