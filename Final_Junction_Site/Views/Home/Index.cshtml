<style>
    body {
        background-color: #388E7F;
        margin: 0;
        padding: 0;
    }

    .mountains {
        background: url("/Images/mint_mountains.jpg") no-repeat center;
        /* background: url("https://th.bing.com/th/id/R.10ed0491c2944e03be007f7c4fc172bc?rik=MUj2LI4CoU6nnw&riu=http%3a%2f%2fwww.100hdwallpapers.com%2fwallpapers%2f3840x2160%2fmountains_lscape_minimal_4k-hd_wallpapers.jpg&ehk=U78yDTkBh4ut%2f9jsucbrAFt9JJZ070hckCLMh1b2j1E%3d&risl=&pid=ImgRaw&r=0") no-repeat center; */
        /* background: url("~/Images/mint_mountains.jpg") no-repeat center; */
        height: 60vh;
        background-size: cover;
        filter: blur(2px);
    }

    .mountains-foreground {
        text-align: center;
        position: absolute;
        top: 30%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1;
    }

    .search-bar {
        border-radius: 25px;
        border: 1px;
        padding-left: 20px;
        height: 45px;
        width: 350px;
        /* border-style:  */
        /* box-shadow: 0px 8px 10px black; */
        /* box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px; */
        box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
    }

    .search-button {
        height: 45px;
        width: 75px;
        color: black;
        font-family: monospace;
        border-radius: 25px;
        background-color: dodgerblue;
        box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
    }

    .category-heading {
        font-style: italic;
        font-weight: 300;
        color: rgba(0, 0, 0, .7);
    }

    .tile-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
        /* margin-top: 5vh; */
    }

    .tile {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f0f0f0;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 25px;
        height: 60px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        font-weight: bolder;
        color: white;
        font-size: xx-large;
    }

    .tile1 {
        background-color: blueviolet;
        background-image: url("/Images/flame.png");
        /* font-family:'High Tower Text'; */
    }

    .tile2 {
        background-color: mediumseagreen;
        background-image: url("/Images/pcb.jpg");
    }

    .tile3 {
        background-size: auto 200%;
        background-position: 50% 3%;
        background-color: mediumpurple;
        background-image: url("/Images/shirt.png");
    }

    .tile4 {
        background-size: auto 270%;
        background-position: 50% 30%;
        background-color: darkgrey;
        background-image: url("/Images/book.png");
    }

    .tile5 {
        font-size: x-large;
        background-size: auto 270%;
        background-color: mediumblue;
        background-image: url("/Images/sofa.png");
    }

    .tile6 {
        background-position: 50% 60%;
        font-size: x-large;
        background-size: auto 270%;
        background-blend-mode: overlay;
        background-color: cornflowerblue;
        background-image: url("/Images/note.png");
    }

    .tile7 {
        background-size: auto 270%;
        background-position: 30% 35%;
        background-color: hotpink;
        background-blend-mode: overlay;
        /* background-color: color-mix(in srgb, hotpink, transparent 70%); */
        background-image: url("/Images/makeup.png");
    }

    .tile8 {
        font-size: larger;
        color: antiquewhite;
        background-color: lightskyblue;
        background-image: url("/Images/toys.png");
    }
    
</style>

