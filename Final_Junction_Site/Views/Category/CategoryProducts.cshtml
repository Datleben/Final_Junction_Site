@model List<Final_Junction_Site.Models.Site>

@{
    ViewData["Title"] = "Category Sites";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="mb-4">Browse Sites by Category</h2>
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>Showing @Model.Count sites</div>
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var site in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@site.ThumbnailURL" class="card-img-top" alt="@site.SiteName">
                    <div class="card-body">
                        <h5 class="card-title">@site.SiteName</h5>
                        <p class="card-text">@site.Description</p>
                        <p class="card-text">
                            <small class="text-muted">Trend Score: @site.TrendScore</small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="@site.URL" class="btn btn-primary" target="_blank">Visit Site</a>
                        <!-- New Details Button, using SiteController's Details action -->
                        <a asp-action="Details" asp-controller="Site" asp-route-SiteId="@site.SiteId" class="btn btn-secondary">Show Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>