@model Rating
@{
	ViewBag.Title = "Edit Rating";
}
<form asp-action="Edit" method="post">
	<input type="hidden" asp-for="RatingId" />

	<div class="form-group">
		<label asp-for="SiteId"></label>
		<div><span asp-validation-for="SiteId" class="text-danger"></span></div>
		<input asp-for="SiteId" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="CustomerId"></label>
		<div><span asp-validation-for="CustomerId" class="text-danger"></span></div>
		<input asp-for="CustomerId" class="form-control" />
	</div>

	<div class="form-group">
		<label asp-for="ReviewText"></label>
		<div><span asp-validation-for="ReviewText" class="text-danger"></span></div>
		<textarea asp-for="ReviewText" class="form-control"></textarea>
	</div>

	<div class="form-group">
		<label asp-for="Stars"></label>
		<div><span asp-validation-for="Stars" class="text-danger"></span></div>
		<input asp-for="Stars" class="form-control" />
	</div>

	<div class="text-center">
		<button class="btn btn-primary" type="submit">Save</button>
		<a asp-action="List" class="btn btn-default">Cancel</a>
	</div>
</form>